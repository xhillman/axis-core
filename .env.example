# Axis Core Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Debug & Logging
# =============================================================================

# Enable debug mode (verbose logging, state dumps at phase boundaries)
# AXIS_DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# AXIS_LOG_LEVEL=INFO

# =============================================================================
# Model Provider API Keys
# =============================================================================

# Anthropic API key (required for Claude models)
# ANTHROPIC_API_KEY=sk-ant-...

# OpenAI API key (required for GPT models)
# OPENAI_API_KEY=sk-...

# Ollama base URL (for local models)
# OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Default Adapters
# =============================================================================

# Default model adapter (e.g., claude-sonnet-4-20250514, gpt-4o, ollama/llama3)
# AXIS_DEFAULT_MODEL=claude-sonnet-4-20250514

# Default memory adapter (ephemeral, sqlite:///path/to/db, redis://host:port)
# AXIS_DEFAULT_MEMORY=ephemeral

# Default planner (sequential, auto, react)
# AXIS_DEFAULT_PLANNER=sequential

# =============================================================================
# Budget Defaults
# =============================================================================

# Maximum cycles per run
# AXIS_MAX_CYCLES=10

# Maximum tool calls per run
# AXIS_MAX_TOOL_CALLS=50

# Maximum model calls per run
# AXIS_MAX_MODEL_CALLS=20

# Maximum tokens per run (input + output)
# AXIS_MAX_TOKENS=100000

# Maximum cost in USD per run
# AXIS_MAX_COST_USD=1.00

# Maximum wall time in seconds per run
# AXIS_MAX_WALL_TIME_SECONDS=300

# =============================================================================
# Timeout Defaults (in seconds)
# =============================================================================

# Timeout for observe phase
# AXIS_TIMEOUT_OBSERVE=30

# Timeout for plan phase
# AXIS_TIMEOUT_PLAN=30

# Timeout for act phase (tool execution)
# AXIS_TIMEOUT_ACT=60

# Timeout for evaluate phase
# AXIS_TIMEOUT_EVALUATE=10

# Timeout for finalize phase
# AXIS_TIMEOUT_FINALIZE=30

# Total timeout for entire run
# AXIS_TIMEOUT_TOTAL=300

# =============================================================================
# Rate Limits
# =============================================================================

# Model calls rate limit (e.g., "10/minute", "100/hour")
# AXIS_RATE_LIMIT_MODEL_CALLS=60/minute

# Tool calls rate limit
# AXIS_RATE_LIMIT_TOOL_CALLS=100/minute

# Token rate limit
# AXIS_RATE_LIMIT_TOKENS=100000/minute

# =============================================================================
# Retry Policy
# =============================================================================

# Maximum retry attempts for recoverable errors
# AXIS_RETRY_MAX_ATTEMPTS=3

# Backoff strategy: exponential, linear, constant
# AXIS_RETRY_BACKOFF=exponential

# Initial delay between retries (seconds)
# AXIS_RETRY_INITIAL_DELAY=1.0

# Maximum delay between retries (seconds)
# AXIS_RETRY_MAX_DELAY=30.0

# Jitter factor (0.0 to 1.0)
# AXIS_RETRY_JITTER=0.1

# =============================================================================
# Cache Configuration
# =============================================================================

# Enable response caching
# AXIS_CACHE_ENABLED=false

# Cache model responses
# AXIS_CACHE_MODEL_RESPONSES=true

# Cache tool results
# AXIS_CACHE_TOOL_RESULTS=true

# Cache TTL in seconds
# AXIS_CACHE_TTL=3600

# Cache backend (memory, redis)
# AXIS_CACHE_BACKEND=memory

# Maximum cache size in MB
# AXIS_CACHE_MAX_SIZE_MB=100

# =============================================================================
# Memory Adapters
# =============================================================================

# SQLite database path (for sqlite memory adapter)
# AXIS_SQLITE_PATH=./axis_memory.db

# Redis URL (for redis memory adapter)
# REDIS_URL=redis://localhost:6379/0

# Redis namespace prefix
# AXIS_REDIS_NAMESPACE=axis

# =============================================================================
# Telemetry
# =============================================================================

# Telemetry sink: console, file, callback, none
# AXIS_TELEMETRY_SINK=none

# File path for file sink
# AXIS_TELEMETRY_FILE=./axis_trace.jsonl

# Telemetry buffer mode: immediate, batched, phase, end
# AXIS_TELEMETRY_BUFFER_MODE=batched
